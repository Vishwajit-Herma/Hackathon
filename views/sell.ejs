<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sell Equipment</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">

  <div class="container mx-auto px-4 py-12">
    <!-- Page Heading -->
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">Sell Your Equipment</h1>

    <!-- Form Container -->
    <div class="bg-white shadow-xl rounded-lg p-8">
      <form action="/sell" method="POST" enctype="multipart/form-data" class="space-y-8">

        <!-- Equipment Details Section -->
        <div>
          <h2 class="text-2xl font-semibold text-gray-700 mb-6">Equipment Details</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Equipment Type -->
            <div>
                <label for="ownername" class="block text-gray-600 font-medium mb-2">Owner Name</label>
                <input type="text" id="ownername" name="ownername" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" required>
              </div>
              <div>
                <label for="number" class="block text-gray-600 font-medium mb-2">Phone Number</label>
                <input type="number" id="number" name="number" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" required>
              </div>
            <div>
              <label for="equipmentName" class="block text-gray-600 font-medium mb-2">Select Equipment Type</label>
              <select id="equipmentName" name="equipmentName" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3">
                <option value="Tractor">Equipments</option>
                <option value="Harvester">Vehicles</option>
                <option value="Plough">Cattles</option>
                <option value="Seeder">Seeds</option>
                <option value="Seeder">Crops</option>
              </select>
            </div>

            <!-- Equipment Name -->
            <div>
              <label for="name" class="block text-gray-600 font-medium mb-2">Name of Equipment</label>
              <input type="text" id="name" name="name" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" required>
            </div>
          </div>

          <!-- Description -->
          <div class="mt-6">
            <label for="description" class="block text-gray-600 font-medium mb-2">Description</label>
            <textarea id="description" name="description" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" rows="4" required></textarea>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
            <!-- Price -->
            <div>
              <label for="price" class="block text-gray-600 font-medium mb-2">Price</label>
              <input type="number" id="price" name="price" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" required>
            </div>

            <!-- Upload Photo -->
            <div>
              <label for="photo" class="block text-gray-600 font-medium mb-2">Upload Photo</label>
              <input type="file" id="photo" name="photo" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" required>
            </div>
          </div>
        </div>

        <!-- Location Details Section -->
        <div class="mt-10">
          <h2 class="text-2xl font-semibold text-gray-700 mb-6">Location Details</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- District -->
            <div>
              <label for="district" class="block text-gray-600 font-medium mb-2">District</label>
              <input type="text" id="district" name="district" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" required>
            </div>

            <!-- City -->
            <div>
              <label for="city" class="block text-gray-600 font-medium mb-2">City</label>
              <input type="text" id="city" name="city" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" required>
            </div>

            <!-- Area -->
            <div>
              <label for="area" class="block text-gray-600 font-medium mb-2">Area</label>
              <input type="text" id="area" name="area" class="block w-full bg-gray-100 border border-gray-300 rounded-lg p-3" required>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="mt-10 text-center">
          <button type="submit" class="bg-green-500 text-white font-semibold py-3 px-6 rounded-lg hover:bg-green-600 transition-all duration-200">
            Submit
          </button>
        </div>

      </form>
    </div>
  </div>

</body>
</html>
