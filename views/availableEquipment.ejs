<!DOCTYPE html>
<html>
  <head>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Available <%= equipment[0].equipmentType %> for Rent</h1>
    
        <% if (equipment.length > 0) { %>
            <% equipment.forEach(function(item) { %>
                <div class="bg-white shadow-md rounded mb-4 p-4">
                    <h2 class="text-xl font-bold mb-2"><%= item.equipmentType %></h2>
                    <p><strong>Price per Day:</strong> <%= item.pricePerDay %></p>
                    <p><strong>Owner:</strong> <%= item.ownerName %></p>
                    <p><strong>Location:</strong> <%= item.address %></p>
                    <p><strong>Phone Number:</strong> <%= item.phoneNumber %></p>
                    <p><strong>Available From:</strong> <%= item.availableFrom.toDateString() %></p>
                    <p><strong>Rent Duration:</strong> <%= duration %> days</p>
                </div>
            <% }); %>
        <% } else { %>
            <p>No equipment available for rent.</p>
        <% } %>
    </div>
    
  </body>
</html>
