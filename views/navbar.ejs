<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navbar Example</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body >

    
  <nav class="bg-white-800 text-black p-4" font-bold>
    <div class="container  flex justify-between items-center mr-500 m">
      <!-- Logo Section -->
      <div class="flex-shrink-0">
        <a href="/">
          <img src="/images/logo1.jpg" alt="Your Logo" class="h-16 mt-2 mx-4"> <!-- Adjust the height as needed -->
        </a>
      </div>

      <!-- Navigation Links -->
      <div class="space-x-20 mx-10">
        <a href="/news" class="hover:text-green-600 mt-2 ">News
            
        </a>
        <a href="/contact-us" class="hover:text-green-600">Contact Us</a>
        <a href="/profile" class="hover:text-black  bg-green-500 text-white rounded-lg px-4 py-2 transition-transform transform hover:scale-105">My Profile</a>
      </div>
    </div>
  </nav>

<div >


  <footer class=" text-black py-4">
    <div class="relative overflow-hidden h-20">
        <div id="slidingText" class="absolute whitespace-nowrap">
            <span class="text-4xl font-bold">Welcome to AgriNet</span>
        </div>
    </div>
</footer>

<style>
    @keyframes slideLeft {
        0% {
            transform: translateX(100%);
        }
        100% {
            transform: translateX(-100%);
        }
    }

    #slidingText {
        animation: slideLeft 8s linear infinite;
        width: 100%;
        height: 100%;
    }
</style>

  <!-- Cards Section -->
  <div class="container mx-auto px-4 py-8 ">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 h-64">
      <!-- Sell Card -->
      <div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col items-center">
        <img src="/images/sell.jpg" alt="Sell" class="w-40 h-[24rem] object-cover">
        <div class="p-4 text-center">
          <a href="/sell" class="text-xl font-bold text-gray-800 hover:text-green-500">Sell</a>
        </div>
      </div>

      <!-- Rent Card -->
      <div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col items-center">
        <img src="/images/rent.jpg" alt="Rent" class="w-40 h-[24rem] object-cover">
        <div class="p-4 text-center">
          <a href="/rent" class="text-xl items-center font-bold text-gray-800 hover:text-green-500">Rent</a>
        </div>
      </div>

      <!-- Buy Card -->
      <div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col items-center">
        <img src="/images/buy.jpg" alt="Buy" class="w-40 h-[24rem] object-cover ">
        <div class="p-4 text-center">
          <a href="/buy" class="text-xl items-center font-bold text-gray-800 hover:text-green-500">Buy</a>
        </div>
      </div>
    </div>
  </div>

</div>



</body>
</html>
